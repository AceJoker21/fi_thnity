<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.FiThnity.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Type Badge + Transport -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Ride Type Badge -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTypeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvRideType"
                    style="@style/TextAppearance.FiThnity.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:text="REQUEST" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Transport Type -->
            <TextView
                android:id="@+id/tvTransportType"
                style="@style/TextAppearance.FiThnity.Headline2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                tools:text="ðŸš– Taxi" />

            <!-- Seats (if available) -->
            <TextView
                android:id="@+id/tvSeats"
                style="@style/TextAppearance.FiThnity.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_secondary"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="3 seats"
                tools:visibility="visible" />
        </LinearLayout>

        <!-- User Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivUserPhoto"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="User photo"
                android:src="@android:drawable/ic_menu_camera"
                android:tint="@color/text_hint" />

            <TextView
                android:id="@+id/tvUserName"
                style="@style/TextAppearance.FiThnity.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/text_secondary"
                tools:text="John Doe" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="@color/text_hint"
            android:alpha="0.2" />

        <!-- Origin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="Origin"
                android:src="@android:drawable/ic_menu_mylocation"
                android:tint="@color/primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.FiThnity.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:textColor="@color/text_hint" />

                <TextView
                    android:id="@+id/tvOrigin"
                    style="@style/TextAppearance.FiThnity.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/text_primary"
                    tools:text="Avenue Habib Bourguiba, Tunis" />
            </LinearLayout>
        </LinearLayout>

        <!-- Destination -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="Destination"
                android:src="@android:drawable/ic_dialog_map"
                android:tint="@color/accent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.FiThnity.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textColor="@color/text_hint" />

                <TextView
                    android:id="@+id/tvDestination"
                    style="@style/TextAppearance.FiThnity.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/text_primary"
                    tools:text="La Marsa, Tunis" />
            </LinearLayout>
        </LinearLayout>

        <!-- Time Info -->
        <TextView
            android:id="@+id/tvTime"
            style="@style/TextAppearance.FiThnity.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_hint"
            tools:text="Posted 5 minutes ago" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
